// use left and right to include all possible elements
// return left or left -1? after exiting the while loop, left is the minimal kâ€‹ satisfying the condition function; 
// condition: to be designed

def binary_search(array) -> int:
    def condition(value) -> bool:
        pass

    left, right = 0, len(array)-1
    while left < right:
        mid = left + (right - left) // 2
        if condition(mid):
            right = mid
        else:
            left = mid + 1
    return left


